{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Station",
    "definitions": {
        "Station": {
            "type": "object",
            "additionalProperties": {},
            "properties": {
                "access_type": {
                    "$ref": "#/definitions/AccessType",
                    "description": "Valid Access Type."
                },
                "der_energy": {
                    "type": "number",
                    "description": "Combined nameplate capacity of onsite energy generation and/or\nmaximum battery discharge capacity in kilowatts (kW)."
                },
                "der_power": {
                    "type": "number",
                    "description": "Nameplate capacity of onsite energy generation in kW"
                },
                "host_email": {
                    "type": "string",
                    "description": "Station host point of contact email address"
                },
                "host_first_name": {
                    "type": "string",
                    "description": "Station host point of contact first name"
                },
                "host_last_name": {
                    "type": "string",
                    "description": "Station host point of contact last name"
                },
                "onsite_der": {
                    "type": "boolean",
                    "description": "Station has distributed energy resource."
                },
                "onsite_der_type": {
                    "$ref": "#/definitions/OnsiteDerType",
                    "description": "Valid Distributed Energy Resource Type"
                },
                "operating_status": {
                    "$ref": "#/definitions/OperatingStatus",
                    "description": "Valid Operating Status."
                },
                "operator_address": {
                    "type": "string",
                    "description": "Street address of entity responsible for operation and maintenance of the funded charging\nstation."
                },
                "operator_city": {
                    "type": "string",
                    "description": "City of entity responsible for operation and maintenance of the funded charging station."
                },
                "operator_name": {
                    "type": "string",
                    "description": "Name of entity responsible for operation and maintenance of the funded charging station."
                },
                "operator_state": {
                    "type": "string",
                    "description": "Valid state code of entity responsible for operation and maintenance of the funded\ncharging station."
                },
                "operator_zip": {
                    "type": "string",
                    "description": "Valid ZIP Code of entity responsible for operation and maintenance\nof the of the funded charging station."
                },
                "site_host_type": {
                    "type": "string",
                    "description": "Type of site host for the charging station. (e.g. public, workplace, MUD)"
                },
                "site_host_type_detail": {
                    "type": "string",
                    "description": "Additional detail on site host land use. (e.g. hospital, hotel, parking garage, etc.)"
                },
                "station_address": {
                    "type": "string",
                    "description": "Street address of charging station."
                },
                "station_city": {
                    "type": "string",
                    "description": "City where charging station is located."
                },
                "station_county": {
                    "type": "string",
                    "description": "Station county (or county analogue)"
                },
                "station_id": {
                    "type": "string",
                    "description": "Unique identity specific to the physical location of the station (site) funded by the\nproject.\n(For NEVI/Part 680 programs, Station ID must be same as the permanent station identifier\nprovided to third parties pursuant to CFR 23 ยง 680.116(c)(1)."
                },
                "station_lat": {
                    "type": "number",
                    "description": "Station center WSG84 encoded latitude in decimal degrees to at least 4 decimal places.\nValid latitudes are between -90 and 90."
                },
                "station_lon": {
                    "type": "number",
                    "description": "Station center WSG84-encoded longitude in decimal degrees to at least 4 decimal places.\nValid longitudes are between -180 and 180"
                },
                "station_name": {
                    "type": "string",
                    "description": "Descriptive name of charging site (e.g., Mercy Hospital)"
                },
                "station_state": {
                    "type": "string",
                    "description": "Valid state code of state where station or territory where the station is located."
                },
                "station_zip": {
                    "type": "string",
                    "description": "Valid ZIP code of where station is located."
                }
            },
            "required": [
                "access_type",
                "der_energy",
                "der_power",
                "host_email",
                "host_first_name",
                "host_last_name",
                "onsite_der",
                "onsite_der_type",
                "operating_status",
                "operator_address",
                "operator_city",
                "operator_name",
                "operator_state",
                "site_host_type",
                "site_host_type_detail",
                "station_address",
                "station_city",
                "station_county",
                "station_id",
                "station_lat",
                "station_lon",
                "station_name",
                "station_state",
                "station_zip"
            ],
            "title": "Station",
            "description": "A product in the catalog"
        },
        "AccessType": {
            "type": "string",
            "enum": [
                "public",
                "private",
                "semi_public",
                "commercial_only"
            ],
            "title": "AccessType",
            "description": "Valid Access Type.\n"
        },
        "OnsiteDerType": {
            "type": "string",
            "enum": [
                "solar",
                "stationary_battery",
                "wind",
                "fuel_cell",
                "other"
            ],
            "title": "OnsiteDerType",
            "description": "Valid Distributed Energy Resource Type\n"
        },
        "OperatingStatus": {
            "type": "string",
            "enum": [
                "operational",
                "under_construction",
                "planned",
                "decommissioned"
            ],
            "title": "OperatingStatus",
            "description": "Valid Operating Status.\n"
        }
    }
}
